page {
  background-color: #edece8;
}

.user_info_warper {
  height: 45vh;
  background-color: var(--themoColor);
  position: relative;
}
.user_info_warper .user_img_warper {
  position: relative;
}
.user_info_warper .user_img_warper .user_bg {
  height: 45vh;
  filter: blur(10rpx);
}
.user_info_warper .user_img_warper .user_info {
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}
.user_info_warper .user_img_warper .user_info image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_warper .user_img_warper .user_info .nick_name {
  color: white;
  margin-top: 30rpx;
}
.user_info_warper .user_login {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
}
.user_info_warper .user_login navigator {
  border: 1rpx solid green;
  color: green;
  font-size: 40rpx;
  padding: 50rpx;
  border-radius: 15rpx;
}

.user_content_warper {
  position: relative;
  width: 100%;
}
.user_content_warper .user_content_main {
  position: absolute;
  top: -40rpx;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  color: #666;
  padding-bottom: 60rpx;

}
.user_content_warper .user_content_main .history_warper {
  display: flex;
  background-color: #fff;
}
.user_content_warper .user_content_main .history_warper .his_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: center;
  padding: 10rpx 0;
}
.user_content_warper .user_content_main .history_warper .his_item .his_num {
  color: #B03A2E;
}
.user_content_warper .user_content_main .order_warper {
  background-color: #fff;
  margin-top: 30rpx;
}
.user_content_warper .user_content_main .order_warper .order_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content_warper .user_content_main .order_warper .order_row {
  display: flex;
}
.user_content_warper .user_content_main .order_warper .order_row .order_item {
  flex: 1;
  padding: 10rpx 0;
  text-align: center;
}
.user_content_warper .user_content_main .order_warper .order_row .order_item .iconfont {
  font-size: 30rpx;
  color:#B03A2E;
}
.user_content_warper .user_content_main .address_guli {
  background-color: #fff;
  padding: 20rpx;
  margin-top: 30rpx;
}
.user_content_warper .user_content_main .app_info_warper {
  background-color: #fff;
  margin-top: 30rpx;
}
.user_content_warper .user_content_main .app_info_warper .app_info_contact {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content_warper .user_content_main .app_info_warper .app_info_feedback {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content_warper .user_content_main .app_info_warper .app_info_about_us {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content_warper .user_content_main .recommed_app {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #fff;
}
/* 用户内容结束 */

page{
  padding-bottom: 90rpx;
}
.cart-btn{
  padding: 20rpx;
}

.cart-content{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  font-size: 28rpx;
  padding: 20rpx;
}
.cart-content-info{
  flex: 5;
}
.cart-content-tel{
  flex: 2;
}

.cart-title{
  padding: 30rpx;
  color: #B03A2E;
  font-size: 36rpx;
  font-weight: 600;
  border-top: 1px solid currentColor;
  border-bottom: 1px solid currentColor;
}

.cart-commodity{
  box-sizing: border-box;
  width: 100%;
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.commodity-chk{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.commodity-img{
  flex: 3;
}
.commodity-img image{
  width: 100%;
}
.commodity-info{
  flex: 6;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.commodity-info-title text{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.commodity-info-price{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.commodity-info-price-text{
  color: #B03A2E;
  font-weight: 600;
}
.commodity-info-price-btn{
  display: flex;
}
.commodity-info-price-add,.commodity-info-price-less,.commodity-info-price-num{
  border: 1px solid #eee;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.commodity-info-price-num{
  border: none;
}

.cart-btm{
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
}
.cart-btm-chk{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-btm-price{
  flex: 5;
  text-align: right;
  padding-right: 10rpx;
}
.cart-btm-price-text{
  color: #B03A2E;
  font-weight: 600;
}
.cart-btm-btn{
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 600;
  font-size: 34rpx;
  background-color: #B03A2E;
  color: white;
}
page{
  padding-bottom: 90rpx;
}
.detail-swiper swiper{
  width: 100%;
  height: 70vw;
  text-align: center;
}
.detail-swiper image{
  width: 60%;
}

.detail-price{
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #B03A2E;
}

.detail-info{
  display: flex;
  box-sizing: border-box;
  border-top: 5rpx solid #ccc;
  border-bottom: 5rpx solid #ccc;
  padding: 20rpx 0;
}
.detail-info-name{
  flex: 5;
  padding: 15rpx 0;
  color: black;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-indent: 1rem;
}
.detail-info-collection{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 5rpx solid #ccc;
}

.detail-title{
  padding: 20rpx 15rpx;
  font-size: 32rpx;
  color: #B03A2E;
  font-weight: 700;
}


.detail-btm{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  border-top: 1rpx solid black;
  display: flex;
  height: 90rpx;
}
.detail-btm-customer{
  position: relative;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 26rpx;
}
.customer-btn{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.add-cart,.buy-now{
  flex: 2;
  background-color: #F1C40F;
  color: white;
  font-weight: 600;
}
.buy-now{
  background-color: #B03A2E;
}
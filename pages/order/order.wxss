.order_main .order_item {
  border-bottom: 1rpx solid #ccc;
  color: #666;
}
.order_main .order_item .order_no_row {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 10rpx;
}
.order_main .order_item .order_pirce_row {
  display: flex;
  justify-content: space-between;
  padding: 0rpx 10rpx;
}
.order_main .order_item .order_pirce_row .order_price_value {
  color: #B03A2E;
  font-weight: 600;
  font-size: 30rpx;
}
.order_main .order_item .order_time_row {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 10rpx;
}